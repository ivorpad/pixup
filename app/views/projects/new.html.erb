<div class="row">
  <div class="col-md-4">
    <%= form_for @project do |f| %>
      <%= render "shared/errors", object: @project %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.select :status, Project.statuses.keys.map { |status| [status.gsub(/is_/, "").capitalize, status] } %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Project", class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div>
