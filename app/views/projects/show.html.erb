<h1><%= @project.title %></h1>
<%= link_to "Delete Project", project_path(@project), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
<%= link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary" %>
<%= link_to "Create New Category", new_project_category_path(@project), class: "btn btn-warning" %>
<%= link_to "Add New Asset", new_project_asset_path(@project), class: "btn btn-success" %>

<p><%= @project.description %></p>

<h3>Project Categories:</h3>

<%= link_to "All", project_assets_path, class: "btn btn-primary" %>

<%= render @project.visible_categories %>
