<% if @comment.save %>
  $(".list-comments").append(" <%= escape_javascript(render (@comment)) %> ");
  $(".new-comment").html("<%= escape_javascript( render partial: 'comments/form', locals: { project: @project, asset: @asset, comment: @new_comment } ) %> ");
<% else %>
  $(".comment-<%= @comment.id %>").prepend("<div class='alert alert-danger'><%= flash[:error] %></div>");
<% end %>
