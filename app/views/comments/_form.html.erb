<div class="col-md-4">
  <h3>Comments:</h3>
  <%= form_for Comment.new, :url => project_asset_comments_path(@project.friendly_id, @asset.friendly_id), remote: true do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save Comment", class: 'btn btn-primary' %>
    </div>
  <% end %>
