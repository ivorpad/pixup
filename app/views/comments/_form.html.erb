<div class="row">
  <div class="col-md-8">

<%= form_for [@project, @category, commentable, Comment.new] do |f| %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit "Send Comment", class: 'btn btn-success' %>
  </div>

<% end %>

</div>
</div>
