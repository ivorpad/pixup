<% if user_signed_in? && current_user.likes?(@asset) %>
<%= link_to "Unlike", project_asset_like_path(@project, @asset), method: :delete, class: 'btn btn-danger', remote: true %>
<% else %>
<%= link_to "Like", project_asset_like_path(@project, @asset), method: :post, class: 'btn btn-success', remote: true %>
<% end %>

<p>Likes: <%= @asset.likes.count %></p>
<p>Who liked: <br>

<% @asset.likes.each do |like| %>
  <small><%= like.user.name %></small> <br>
<% end %>
</p>
