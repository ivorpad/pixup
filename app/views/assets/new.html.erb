<div class="row">
  <div class="col-md-4">
    <h1>New Assets</h1>
    <%= form_for @asset, :url => project_assets_path do |f| %>

      <%= render "shared/errors", object: @asset %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
        <div class="form-group">
          <%= f.collection_select :category_id, @project.categories, :id, :name, { :prompt => "Select Category" }, {:class=>'form-control'} do |b| %>
            <!-- <div class="row">
              <%= b.label(class: 'radio_button') do %>
                  <%= b.radio_button(class: "check_box") %>
                  <%= b.object.name %>
              <% end %>
            </div> -->
          <% end %>

          <div class="form-group">
            <%= f.label :asset_file %>
            <%= f.file_field :asset_file %>
          </div>
        </div>

      <div class="form-group">
        <%= f.submit "Create Asset", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
