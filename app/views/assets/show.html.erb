<h2><%= @asset.title %></h2>
<%= link_to "Delete", project_asset_path, method: :delete, class: "btn btn-danger" %>
<%= link_to "Edit", edit_project_asset_path, class: "btn btn-primary" %>

<div class="likes" id="likes">

    <%= render partial: "likes" %>

</div>

<ul>
  <li>Created by: <%= @asset.user.name %></li>
  <li>Title:  <%= @asset.title %> </li>
  <li>File type: <%= @asset.asset_file.file.content_type.split("/").first.capitalize %></li>


<% if @asset.asset_file? %>
  <% if @asset.asset_image? %>
    <li><a href="<%= @asset.asset_file.full.url %>"><%= image_tag @asset.asset_file.preview.url %></a></li>

  <% elsif @asset.asset_application?  %>
    <iframe src=<%= @asset.asset_file.url %> width="600" height="780" style="border: none;"> </iframe>
    <li> <%= link_to "Download", @asset.asset_file.url %> </li>

  <% elsif @asset.asset_video? %>
      <%= @asset.asset_file.url %>

   <% else %>
      <%= @asset.asset_file.url %>
  <% end %>
<% end %>


</ul>

<h4>Size</h4>
<p> <%= number_to_human_size(@asset.asset_file.file.size) %> </p>


<h3>Description</h3>
<p><%= @asset.description %></p>


<ul class="list-comments">
  <%= render @asset.comments %>
</ul>

<div class="new-comment">
  <%= render partial: 'comments/form', locals: { project: @project, asset: @asset, comment: @comment } %>
</div>
