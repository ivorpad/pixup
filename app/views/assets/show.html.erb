<h2><%= @asset.title %></h2>
<%= link_to "Delete", project_asset_path, method: :delete, class: "btn btn-danger" %>
<%= link_to "Edit", edit_project_asset_path, class: "btn btn-primary" %>

<div class="likes" id="likes">

    <%= render partial: "likes" %>

</div>

<ul>
  <li><%= @asset.user.name %></li>
  <li> <%= @asset.title %> </li>
<% if @asset.asset_file? %>
<li>
<%= image_tag @asset.asset_file.url %>
</li>
<% end %>
</ul>

<h3>Description</h3>
<p><%= @asset.description %></p>

<ul class="list-comments">
  <%= render @asset.comments %>
</ul>

<div class="new-comment">
  <%= render partial: 'comments/form', locals: { project: @project, asset: @asset, comment: @comment } %>
</div>
